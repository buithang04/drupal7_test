function cassiopeia_classes_init() {
    drupal_add_css(drupal_get_path('module', 'cassiopeia_classes') . '/css/classes.css');
    drupal_add_js(drupal_get_path('module', 'cassiopeia_classes') . '/js/classes.js');
}




