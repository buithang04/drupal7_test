function cassiopeia_classes_menu() {
  $items = array();

  $items['quan-ly-lop'] = array(
    'title' => 'Quản lý lớp',
    'page callback' => 'cassiopeia_classes_list',
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
    'file' => 'cassiopeia_classes.inc',
  );
  

    $items['classes/delete/%'] = array(
    'title' => 'Delete lớp',
    'page callback' => 'cassiopeia_classes_delete',
    'page arguments' => array(2),
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
    'file' => 'cassiopeia_classes.inc',
  );

$items['classes/edit/%'] = array(
  'title' => 'Chỉnh sửa lớp',
  'page callback' => 'drupal_get_form',       
  'page arguments' => array('cassiopeia_class_form', 2),
