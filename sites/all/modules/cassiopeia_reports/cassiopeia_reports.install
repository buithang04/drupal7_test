      ),
    ),
    'primary key' => array('id'),
    'indexes' => array(
      'department_id' => array('department_id'),
    ),
  );

  $schema['report_count_task'] = array(
    'description' => 'Stores task count per department.',
    'fields' => array(
      'id' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
